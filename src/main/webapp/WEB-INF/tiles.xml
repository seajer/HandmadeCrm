<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="base.definition" template="/views/tiles/layout.jsp">
		<put-attribute name="header" value="/views/tiles/header.jsp"></put-attribute>
		<put-attribute name="footer" value="/views/tiles/footer.jsp"></put-attribute>
		<put-attribute name="body" value=""></put-attribute>
	</definition>
	
	<definition name="users-*" extends="base.definition">
		<put-attribute name="body" value="/views/users/{1}.jsp"></put-attribute>
		<put-attribute name="title" value="{1} user"></put-attribute>
		<put-attribute name="header" value="/views/tiles/header.jsp"></put-attribute>
		<put-attribute name="footer" value="/views/tiles/footer.jsp"></put-attribute>
	</definition>
	
	<definition name="admin-*" extends="base.definition">
		<put-attribute name="body" value="/views/admin/{1}.jsp"></put-attribute>
		<put-attribute name="title" value="{1} page"></put-attribute>
		<put-attribute name="header" value="/views/tiles/header.jsp"></put-attribute>
		<put-attribute name="footer" value="/views/tiles/footer.jsp"></put-attribute>
	</definition>
	
	<definition name="lang-*" extends="base.definition">
		<put-attribute name="body" value="/views/language/{1}.jsp"></put-attribute>
		<put-attribute name="title" value="{1} language"></put-attribute>
		<put-attribute name="header" value="/views/tiles/header.jsp"></put-attribute>
		<put-attribute name="footer" value="/views/tiles/footer.jsp"></put-attribute>
	</definition>
	
	<definition name="login" extends="base.definition">
		<put-attribute name="body" value="/views/login.jsp"></put-attribute>
		<put-attribute name="title" value="Login"></put-attribute>
		<put-attribute name="header" value=""></put-attribute>
		<put-attribute name="footer" value="/views/tiles/footer.jsp"></put-attribute>
	</definition>
	
</tiles-definitions>